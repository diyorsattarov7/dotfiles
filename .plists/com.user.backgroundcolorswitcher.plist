<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>Label</key>
    <string>com.user.backgroundcolorswitcher</string>

    <key>ProgramArguments</key>
    <array>
        <string>/bin/bash</string>
        <string>/Users/diyorsattarov/.scripts/background-color-switcher.sh</string>
        <string>--monitor</string>
    </array>

    <key>RunAtLoad</key>
    <true/>

    <key>KeepAlive</key>
    <true/>

    <key>StandardOutPath</key>
    <string>/tmp/background-color-switcher.log</string>

    <key>StandardErrorPath</key>
    <string>/tmp/background-color-switcher.err</string>

    <key>LimitLoadToSessionType</key>
    <string>Aqua</string>

    <key>ProcessType</key>
    <string>Interactive</string>

    <key>LaunchEvents</key>
    <dict>
        <key>com.apple.screenIsUnlocked</key>
        <dict>
            <key>Notify</key>
            <array>
                <string>com.apple.screenIsUnlocked</string>
            </array>
        </dict>
    </dict>
</dict>
</plist>
